<%= devise_error_messages! %>
<section class="container">
  <section class="login-form">
    <h2>Edit Profile</h2>
    <br>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: 'login', html: { method: :put }) do |f| %>

      <div class="field">
        <%= f.label "Username" %><br />
        <%= f.text_field :name, placeholder: "Username", class: "form-control input-lg" %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>
        <% if !facebooked %>
          <div class="field">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true, placeholder: "Email", class: "form-control input-lg" %>
          </div>

          <div class="field">
            <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
            <%= f.password_field :password, autocomplete: "off", placeholder: "(6 characters minimum)", class: "form-control input-lg" %>
          </div>

          <div class="field">
            <%= f.label :password_confirmation %><br />
            <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control input-lg" %>
          </div>

          <div class="field">
            <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
            <%= f.password_field :current_password, autocomplete: "off", class: "form-control input-lg" %>
          </div>
        <% end %>
        <br>
        <div class="actions">
          <%= f.submit "Update", class: "btn btn-lg btn-login btn-block" %>
        </div>
    <% end %>

    <div class="field">
      <br>
      <br>
      <br>
      <%= button_to "Cancel my account", registration_path(resource_name), class: "btn btn-lg btn-delete btn-block", data: { confirm: "Are you sure?" }, method: :delete %>
    </div>

  </section>
</section>

<%= link_to "Back", :back %>
