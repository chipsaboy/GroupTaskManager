<%= devise_error_messages! %>
<section class="container">
  <section class="login-form">
    <h2>Forgot your Password?</h2>
    <br>
	<%= form_for(resource, as: resource_name, url: password_path(resource_name), class: 'login', html: { method: :post }) do |f| %>

	  <div class="field">
	    <%= f.label :email %><br />
	    <%= f.email_field :email, autofocus: true, class: "form-control input-lg" %>
	  </div>

	  <div class="actions">
	    <%= f.submit "Send me reset password instructions", class: "btn btn-lg btn-login btn-block" %>
	  </div>
	<% end %>
  </section>
</section>