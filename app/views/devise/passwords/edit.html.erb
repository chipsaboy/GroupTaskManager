<%= devise_error_messages! %>
<section class="container">
  <section class="login-form">
    <h2>Change Password</h2>
    <br>
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), class: 'login', html: { method: :put }) do |f| %>
      <%= devise_error_messages! %>
      <%= f.hidden_field :reset_password_token %>

      <div class="field">
        <%= f.label :password, "New password" %><br />
        <%= f.password_field :password, autofocus: true, autocomplete: "off", placeholder: "(6 characters minimum)", class: "form-control input-lg" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, "Confirm new password" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control input-lg" %>
      </div>

      <div class="actions">
        <%= f.submit "Change my password", class: "btn btn-lg btn-delete btn-block" %>
      </div>
    <% end %>
  </section>
</section>
