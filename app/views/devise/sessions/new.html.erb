<%= devise_error_messages! %>
<section class="container">
    <div class="logo">
      <img src="/assets/GTM_logo.svg" class="logo" alt="" />
    </div>
  <section class="login-form">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: 'login') do |f| %>

      <div class="field">
        <%= f.text_field :name, autofocus: true, placeholder: "Name", class: "form-control input-lg" %>
      </div>

      <div class="field">
        <%= f.email_field :email, autofocus: true, placeholder: "Email", class: "form-control input-lg" %>
      </div>

      <div class="field">
        <%= f.password_field :password, autocomplete: "off", placeholder: "Password", class: "form-control input-lg" %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="check_box">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end -%>

      <div class="action">
        <%= f.submit "Log in", class: "btn btn-lg btn-login btn-block" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </section>
</section>