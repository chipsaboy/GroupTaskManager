<div class="ui relaxed divided items">
<% if @tasks.any? %>
	<% @tasks.each do |task| %>
	<div class="item db card">
		<h4 id="task-color">
			<% if !completed?(task) %>
				<%= link_to task.name, edit_list_task_path(id: task.id, list_id: task.list.id) %>
			<% else %>
				<%= task.name %>
			<% end %>
		</h4>
		<p>Due Date: <%= pretty_date(task.due_date) %>
		   <% if !completed?(task) %>
		   	   ||
			   <% if task.due_date > DateTime.now %>
			   		Time remaining: <%= time_remaining(task.due_date) %>
			   <% else %>
			   		Time remaining: Expired
			   <% end %>
			<% end %>
		</p>
		<% if !allowed_complete?(task) %>
			<p>Assigned to:
				<% task.users.each do |u| %>
					<%= u.name %>
				<% end %>
			</p>
		<% end %>
		<p id="task-color">
			<% task.tags.each do |t| %>
				<span class="badge badge-info"><%= t.name %></span>
			<% end %>
		</p>
		<% if allowed_complete?(task) %>
			<% if !completed?(task) %>
				<%= button_to "Completed?", complete_task_path(task), class: "btn btn-xs btn-login sidebs", method: :put %>
			<% else %>
				<%= button_to "Delete", list_task_path(id: task.id, list_id: task.list.id), class: "btn btn-xs btn-login sidebs", method: :delete %>
			<% end %>
		<% end %>
	</div>
	<br>
	<br>
	<% end %>
<% else %>
	<h5>No Current Tasks</h5>
<% end %>
</div>